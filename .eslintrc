{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "strict": [2, "never"],
    "new-cap": [2, { "capIsNewExceptions": ["Router", "Schema"] }],
    "camelcase": [0],
    "consistent-return": [0],
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"]
  }
}
